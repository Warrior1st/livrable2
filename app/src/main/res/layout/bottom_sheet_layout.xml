<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/idRLBSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_shade_1"
    android:padding="4dp">

    <!--text view for displaying Service name-->
    <TextView
        android:id="@+id/idTVServiceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:padding="4dp"
        android:text="Nom du Service"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!--text view for displaying Service description-->
    <TextView
        android:id="@+id/idTVServiceFormulaire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVServiceName"
        android:layout_margin="4dp"
        android:padding="3dp"
        android:text="Formulaire"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <!--text view for displaying Service exigences-->
    <TextView
        android:id="@+id/idTVDocuments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVServiceFormulaire"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:padding="3dp"
        android:text="@string/exigences"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />


    <!--text view for displaying Service price-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVDocuments"
        android:layout_marginTop="-33dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <!--button for editing Service-->

        <!--button for viewing Service details-->

        <Button
            android:id="@+id/idBtnEditService"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:text="Modifier le Service"
            android:textAllCaps="false" />

    </LinearLayout>


</RelativeLayout>